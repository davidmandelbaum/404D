extends layout

block content
  link(href='/stylesheets/list.css', rel='stylesheet')
  script(src='/javascripts/bootstrap.js', type='text/javascript')
  script(src='/javascripts/bootstrap-select.js', type='text/javascript')
  link(href='/stylesheets/bootstrap-select.css', rel='stylesheet')

  div#header.center-block 
    span#leaderboard_text. LEADERBOARD: 
    | #{group.name}

  div#index_content_group.center-block
    ul
      each trial, index in trials
        li
          div.trial_div
            div.rank= index+1
            div.trial_info
              | #{trial.username}: #{trial.dt}: 
              a(href='/trials_nonmed/#{trial._id}'). View Non-med
            div.difference
              span.score_label. POINTS LOST
s             = trial.difference.toFixed(0)
